{% extends '::base.html.twig' %}
{% block css %}
    {% include 'detail.html.twig' %}
{% endblock %}
{% block body %}
    <div class="detail container" id="detail"><div class="name">{% if dentist.image | length > 0 %}<img src="{{ dentist.image }}" alt="{{ dentist.firstname }} {{ dentist.lastname }}">{% endif %}<h2>{% if dentist.gender %}Mr {% else %}Mrs {% endif %}{{ dentist.firstname }} {{ dentist.lastname }}</h2></div><div class="detail">{% if dentist.specialty | length > 0 %}<h4 class="item specialty"><span class="label">Specialty: </span><span class="value">{{ dentist.specialty }}</span></h4>{% endif %}{% if dentist.HasOpenings %}<h4 class="opened"><span>Currently </span><span>{% if dentist.IsCurrentlyOpened %}Open{% else %}Closed{% endif %}</span></h4>{% endif %}<div class="contact"><h4 class="item phone"><span class="label">Phone: </span><span class="value"><a href="tel:{{ dentist.phone }}">{{ dentist.phone }}</a></span></h4><h4 class="item email"><span class="label">Email: </span><span class="value"><a href="mailto:{{ dentist.email }}">{{ dentist.email }}</a></span></h4><h4 class="item address"><span class="label">Address: </span><span class="value">{{ dentist.address }} {{ dentist.city }}</span></h4></div>{% if dentist.HasOpenings %}<div class="opening-hours"><h5>Opening hours</h5>{% if dentist.SundayOpened %}<p class="item"><span class="label day">Sunday: </span><span class="value hours">{{ dentist.SundayOpeningFormatted }} - {{ dentist.SundayClosingFormatted }}</span></p>{% else %}<p class="item"><span class="label day">Sunday: </span><span class="value closed">Closed</span></p>{% endif %}{% if dentist.MondayOpened %}<p class="item"><span class="label day">Monday: </span><span class="value hours">{{ dentist.MondayOpeningFormatted }} - {{ dentist.MondayClosingFormatted }}</span></p>{% else %}<p class="item"><span class="label day">Monday: </span><span class="value closed">Closed</span></p>{% endif %}{% if dentist.TuesdayOpened %}<p class="item"><span class="label day">Tuesday: </span><span class="value hours">{{ dentist.TuesdayOpeningFormatted }} - {{ dentist.TuesdayClosingFormatted }}</span></p>{% else %}<p class="item"><span class="label day">Tuesday: </span><span class="value closed">Closed</span></p>{% endif %}{% if dentist.WednesdayOpened %}<p class="item"><span class="label day">Wednesday: </span><span class="value hours">{{ dentist.WednesdayOpeningFormatted }} - {{ dentist.WednesdayClosingFormatted }}</span></p>{% else %}<p class="item"><span class="label day">Wednesday: </span><span class="value closed">Closed</span></p>{% endif %}{% if dentist.WednesdayOpened %}<p class="item"><span class="label day">Thursday: </span><span class="value hours">{{ dentist.ThursdayOpeningFormatted }} - {{ dentist.ThursdayClosingFormatted }}</span></p>{% else %}<p class="item"><span class="label day">Thursday: </span><span class="value closed">Closed</span></p>{% endif %}{% if dentist.FridayOpened %}<p class="item"><span class="label day">Friday: </span><span class="value hours">{{ dentist.FridayOpeningFormatted }} - {{ dentist.FridayClosingFormatted }}</span></p>{% else %}<p class="item"><span class="label day">Friday: </span><span class="value closed">Closed</span></p>{% endif %}{% if dentist.SaturdayOpened %}<p class="item"><span class="label day">Saturday: </span><span class="value hours">{{ dentist.SaturdayOpeningFormatted }} - {{ dentist.SaturdayClosingFormatted }}</span></p>{% else %}<p class="item"><span class="label day">Saturday: </span><span class="value closed">Closed</span></p>{% endif %}</div>{% endif %}</div></div>
{% endblock %}
